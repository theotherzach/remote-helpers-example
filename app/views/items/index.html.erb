<h1>Append To List Example</h1>

<h2>Items List</h2>

<div id="items">
  <%= render partial: "item", collection: @items %>
</div>

<h2>Add a new Item</h2>

<%= form_with(model: @item) do |f| %>
  <div>
    <%= f.label :name %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
  </div>
  <div>
    <%= f.text_area :description, size: "60x12" %>
  </div>
  <div>
    <%= f.submit "Add item" %>
  </div>
<% end %>
